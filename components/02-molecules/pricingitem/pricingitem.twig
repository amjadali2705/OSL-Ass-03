<div class="col-xl-3 col-lg-3" data-aos="fade-up" data-aos-delay="100">

    <div class="pricing-item {% if isfeatured %}featured{% endif %}">
        {# <span class="advanced">Advanced</span> #}

        {% if showadvanced %}
            <span class="advanced">{{advancedtext}}</span>
        {% endif %}

        {# <h3>Free</h3> #}
        {% include "@atoms/heading/heading.twig" with {
            heading_level: '3',
            heading: heading
        } %}

        <h4><sup>{{suptext}}</sup>{{h4content}}<span>{{spantext}}</span></h4>

        <ul>
            <li {% if isna1 %}class="na"{% endif %}>{{litext1}}</li>
            <li {% if isna2 %}class="na"{% endif %}>{{litext2}}</li>
            <li {% if isna3 %}class="na"{% endif %}>{{litext3}}</li>
            <li {% if isna4 %}class="na"{% endif %}>{{litext4}}</li>
            <li {% if isna5 %}class="na"{% endif %}>{{litext5}}</li>
        </ul>

        <div class="btn-wrap">
            {# <a href="#" class="btn-buy">Buy Now</a> #}
            {% include "@atoms/btn/btn.twig" with {
                btncontent: btncontent,
                a_href: a_href,
                modifier_class: "btn-buy"
            } %}
        </div>
    </div>
</div>